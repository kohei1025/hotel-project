

<%= search_form_for @q do |f| %>
	<%= f.label :name_cont %>
  	<%= f.search_field :name_cont %>

  	<%= f.submit '検索', class: "btn btn-success" %>
<% end %>





<div class="container">
  <div class="row">
		<% @hotels.each do |hotel| %>
	    <div class="col-md-3">
					<div class="card">
					  <img src="<%= hotel.picture_url %>" class="card-img-top" alt="ホテル写真">
					  <div class="card-body">
					    <h5 class="card-title"><%= hotel.name %></h5>
					    <p class="card-text"><%= hotel.description %></p>
					  </div>
					  <div class="card-footer">
					    <small class="text-muted"><%= link_to 'レビューの一覧', hotel_reviews_path(hotel) %></small>
					  </div>
					</div>
	    </div>
		<% end %>
  </div>
</div>


